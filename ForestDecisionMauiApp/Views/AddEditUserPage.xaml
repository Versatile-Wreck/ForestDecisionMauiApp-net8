<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:ForestDecisionMauiApp.ViewModels"
             x:Class="ForestDecisionMauiApp.Views.AddEditUserPage"
             x:DataType="viewModels:AddEditUserViewModel"
             Title="{Binding PageTitle}">
    <VerticalStackLayout Spacing="10" Padding="20">
        <Label Text="用户名:"/>
        <Entry Text="{Binding Username}" IsEnabled="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"/>

        <Label Text="密码:" IsVisible="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"/>
        <Entry Text="{Binding Password}" IsPassword="True" IsVisible="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"/>

        <Label Text="全名:"/>
        <Entry Text="{Binding FullName}"/>

        <Label Text="角色:"/>
        <Picker ItemsSource="{Binding Roles}" SelectedItem="{Binding SelectedRole}"/>

        <Button Text="保存" Command="{Binding SaveUserCommand}" Margin="0,20,0,0"/>
    </VerticalStackLayout>
</ContentPage>