<Shell
    x:Class="ForestDecisionMauiApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ForestDecisionMauiApp.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="ForestDecisionMauiApp">

    <ShellContent
        Title="登录"
        Route="LoginPage"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Shell.TabBarIsVisible="False" />
    <TabBar x:Name="MainTabBar" Route="AppMainContent">
        <ShellContent
            Title="森林数据"
            ContentTemplate="{DataTemplate local:MainDataPage}"
            Route="MainDataPage" />
    </TabBar>
</Shell>