<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:syncfusion="clr-namespace:Syncfusion.Maui.DataGrid;assembly=Syncfusion.Maui.DataGrid"
             xmlns:viewModels="clr-namespace:ForestDecisionMauiApp.ViewModels"
             xmlns:models="clr-namespace:ForestDecisionMauiApp.Models"
             x:Class="ForestDecisionMauiApp.Views.UserManagementPage"
             x:DataType="viewModels:UserManagementViewModel"
             Title="用户管理">

    <Grid RowDefinitions="Auto,*">
        <Button Grid.Row="0" Text="新增用户" Command="{Binding AddUserCommand}" HorizontalOptions="Start" Margin="10"/>

        <syncfusion:SfDataGrid Grid.Row="1" ItemsSource="{Binding Users}" AutoGenerateColumnsMode="None">
            <syncfusion:SfDataGrid.Columns>
                <syncfusion:DataGridTextColumn HeaderText="ID" MappingName="UserID" Width="100"/>
                <syncfusion:DataGridTextColumn HeaderText="用户名" MappingName="Username"/>
                <syncfusion:DataGridTextColumn HeaderText="全名" MappingName="FullName"/>
                <syncfusion:DataGridTextColumn HeaderText="角色" MappingName="Role"/>
                <syncfusion:DataGridTextColumn HeaderText="创建时间" MappingName="CreatedAt" Format="yyyy-MM-dd HH:mm"/>
                <syncfusion:DataGridTemplateColumn HeaderText="操作">
                    <syncfusion:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <HorizontalStackLayout Spacing="10" Padding="5">
                                <Button Text="编辑" 
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:UserManagementViewModel}}, Path=EditUserCommand}"
                                        CommandParameter="{Binding .}"/>
                                <Button Text="删除" 
                                        BackgroundColor="IndianRed"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:UserManagementViewModel}}, Path=DeleteUserCommand}"
                                        CommandParameter="{Binding .}"/>
                            </HorizontalStackLayout>
                        </DataTemplate>
                    </syncfusion:DataGridTemplateColumn.CellTemplate>
                </syncfusion:DataGridTemplateColumn>
            </syncfusion:SfDataGrid.Columns>
        </syncfusion:SfDataGrid>
    </Grid>
</ContentPage>